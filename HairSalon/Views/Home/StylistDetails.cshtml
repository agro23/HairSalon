@{
  Layout = "_Layout";
}

<h1>STYLIST NAME: @Model.GetName()</h1>

<a href='/stylists/@Model["category"].GetId()/stylists/new'>Add another stylist</a><br>
<a href='/clients'>View all Clients</a>

<h4>This expects to receive a single stylist and its clients</h4>

@if(@Model.GetClients().Count > 0)
{
    @foreach (var client in Model)
    {
      <div class="col-lg-6">
        <h4><a href="/ClientDetails">@client.GetId() | @client.GetName()</a></h4>
      </div>
      <div class="col-lg-4">
        <h3>VIEW | <a href="/clients/@client.GetId()/update">EDIT</a> | <a href="/clients/@client.GetId()/delete">DELETE</a></h3>
      </div>
    }
}
else
{
    <h4>@Model.GetName() has no clients right now.</h4>
    <h4><a href="/clients/new">Add Client</a></h4>
}
